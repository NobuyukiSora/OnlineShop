<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionHistoryPage"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/boughtquantity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                tools:ignore="MissingConstraints"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/transactionid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kursi"
                    android:textSize="30dp"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/furniturename1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FT001"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2"
                android:orientation="vertical"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/transactiondate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-1-2022"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/totalprice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 14.000,-"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"
                    />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>